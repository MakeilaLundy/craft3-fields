{% import "_includes/forms" as forms %}

<div class="flex">

    {% if settings.showCountrySelector %}
        <div>
            {{ forms.select({
                size: 'inline',
                label: 'Country Code',
                id: name ~ 'CountryCode',
                name: name ~ '[countryCode]',
                value: viewData ? viewData.countryCode : null,
                options: countryOptions
            }) }}
        </div>
    {% endif %}

    <div class="flex-grow">
        {{ forms.text({
            class: '',
            label: 'Phone Number',
            id: name ~ 'PhoneNumber',
            name: name ~ '[rawInput]',
            value: viewData ? viewData.rawInput : null
        }) }}
    </div>

</div>

